{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Backend/index.ts" },
    { "src": "/(.*)", "dest": "Frontend/dist/$1" }
  ]
}
